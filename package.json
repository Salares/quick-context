{
  "name": "quick-context",
  "displayName": "Quick Context",
  "description": "Generate LLM-ready markdown catch-up prompts from selected files and folders.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Salares/quick-context.git"
  },
  "bugs": {
    "url": "https://github.com/Salares/quick-context/issues"
  },
  "homepage": "https://github.com/Salares/quick-context",
  "version": "1.0.1",
  "publisher": "dev-salares",
  "license": "ISC",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:quickContext.generateFromSelection"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quickContext.generateFromSelection",
        "title": "Quick Context: Generate Catch-up Prompt"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "quickContext.generateFromSelection",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "quickContext.generateFromSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo \"No tests\""
  },
  "keywords": [
    "llm",
    "chatgpt",
    "context",
    "prompt",
    "markdown"
  ],
  "author": "Daniel Koláček",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0"
  }
}
